{
	"name": "svelte-capacitor-tailwind-starter",
	"version": "1.0.0",
	"description": "Create lightning fast cross-platform apps !",
	"license": "MIT",
	"author": {
		"name": "Thery Jean-Baptiste",
		"email": "jb.thery@flameapp.fr",
		"url": "https://flameapp.fr"
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"sync": "npx cap sync",
		"open:ios:project": "npm run build && npm run sync && npx cap open ios",
		"run:ios:simualtor": "npm run build && npm run sync && npx cap run ios",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"preview": "vite preview",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"build:android": "run-s build cap-run:android",
		"build:ios": "run-s build cap-run:ios",
		"cap-run:android": "cap sync android && cap open android",
		"cap-run:ios": "cap sync ios && cap open ios",
		"dev:ios": "run-p dev cap-run:ios",
		"dev:android": "run-p dev cap-run:android"
	},
	"dependencies": {
		"@capacitor/android": "^3.4.0",
		"@capacitor/cli": "^3.4.0",
		"@capacitor/core": "^3.4.0",
		"@capacitor/geolocation": "^1.3.1",
		"@capacitor/ios": "^3.4.0",
		"@capacitor/splash-screen": "^1.2.1",
		"svelte-routing": "^1.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.1.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@mdi/js": "^6.5.95",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.36",
		"@tsconfig/svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"autoprefixer": "^10.4.2",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"husky": "^7.0.4",
		"mdi-svelte": "^1.1.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.6",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"svelte": "^3.46.3",
		"svelte-check": "^2.4.1",
		"svelte-preprocess": "^4.10.2",
		"tailwindcss": "^3.0.18",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"vite": "^2.7.13",
		"vite-tsconfig-paths": "^3.3.17"
	}
}
